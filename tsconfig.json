{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/locales/*": ["./src/locales/*"],
      "@/mocks/*": ["./__mocks__/*"]
    },
    "strict": true,
    "forceConsistentCasingInFileNames": true
  }
}
